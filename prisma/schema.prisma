datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model Admin {
  nidn              Int             @id
  name              String
  email             String          @unique
  password          String
}

model Mahasiswa {
  nim               Int             @id
  name              String
  email             String          @unique
  password          String
  angkatan          Int?
  gender            String?
  tak               Tak[]
}


model Tak {
  id                String          @id @default(uuid())
  mahasiswa         Mahasiswa       @relation(fields: [mahasiswaNIM], references: [nim])
  mahasiswaNIM      Int
  name              String
  image             String?
  tingkatan         Tingkatan?
  point_TAK         Int             @default(0)
  verifed_status    Boolean         @default(false)
}

enum Tingkatan {
  KAMPUS
  KOTA
  KABUPATEN
  PROVINSI
  NASIONAL
  INTERNASIONAL
}